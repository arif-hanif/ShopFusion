{
  "name": "shop-fusion-frontend",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "preview": "turbo run preview --no-cache --parallel --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx}\"",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "3.2.5",
    "turbo": "1.12.4"
  },
  "packageManager": "pnpm@8.15.4"
}
